{
  "name": "desktop-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development node scripts/run-electron.mjs electron/main.cjs\"",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "prepare:win-bins": "node scripts/fetch-windows-binaries.mjs",
    "pack": "electron-builder --dir",
    "dist:win": "npm run build && npm run prepare:win-bins && electron-builder --win --x64",
    "verify": "node scripts/verify.mjs",
    "verify:fast": "node scripts/verify.mjs --fast"
  },
  "dependencies": {
    "vue": "^3.5.25"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vue-tsc": "^3.1.5",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "com.instabatch.downloader",
    "productName": "InstaBatch",
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "extraResources": [
      {
        "from": "resources/bin",
        "to": "bin"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
